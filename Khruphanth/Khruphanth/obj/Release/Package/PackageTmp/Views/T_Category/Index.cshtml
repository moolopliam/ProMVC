@model IEnumerable<Khruphanth.Models.T_Category>

@{


    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

@{
    if (Convert.ToString(Session["Result"]) == "error")
    {

        <script type="text/javascript">
            window.onload = function () {
                Command: toastr["warning"]("ไม่สามารถลบข้อมูลได้ เนื่องจากข้อมูลนี้ใช้งานอยู่", "แจ้งเตือน")

                toastr.options = {
                    "closeButton": false,
                    "debug": false,
                    "newestOnTop": false,
                    "progressBar": false,
                    "positionClass": "toast-top-right",
                    "preventDuplicates": false,
                    "onclick": null,
                    "showDuration": "300",
                    "hideDuration": "1000",
                    "timeOut": "5000",
                    "extendedTimeOut": "1000",
                    "showEasing": "swing",
                    "hideEasing": "linear",
                    "showMethod": "fadeIn",
                    "hideMethod": "fadeOut"
                }
            }
        </script>
    }
    else if (Convert.ToString(Session["Result"]) == "ok")
    {
        <script type="text/javascript">
            window.onload = function () {
                Command: toastr["success"]("ลบข้อมูลเรียบร้อย", "แจ้งเตือน")

                toastr.options = {
                    "closeButton": true,
                    "debug": false,
                    "newestOnTop": false,
                    "progressBar": false,
                    "positionClass": "toast-top-right",
                    "preventDuplicates": false,
                    "onclick": null,
                    "showDuration": "300",
                    "hideDuration": "1000",
                    "timeOut": "5000",
                    "extendedTimeOut": "1000",
                    "showEasing": "swing",
                    "hideEasing": "linear",
                    "showMethod": "fadeIn",
                    "hideMethod": "fadeOut"
                }
            }
        </script>

    }
    else if (Convert.ToString(Session["Result"]) == "okC")
    {
        <script type="text/javascript">
            window.onload = function () {
                Command: toastr["success"]("เพิ่มข้อมูลเรียบร้อย", "แจ้งเตือน")

                toastr.options = {
                    "closeButton": true,
                    "debug": false,
                    "newestOnTop": false,
                    "progressBar": false,
                    "positionClass": "toast-top-right",
                    "preventDuplicates": false,
                    "onclick": null,
                    "showDuration": "300",
                    "hideDuration": "1000",
                    "timeOut": "5000",
                    "extendedTimeOut": "1000",
                    "showEasing": "swing",
                    "hideEasing": "linear",
                    "showMethod": "fadeIn",
                    "hideMethod": "fadeOut"
                }
            }
        </script>

    }
    else if (Convert.ToString(Session["Result"]) == "okE")
    {
        <script type="text/javascript">
            window.onload = function () {
                Command: toastr["success"]("แก้ไขข้อมูลเรียบร้อย", "แจ้งเตือน")

                toastr.options = {
                    "closeButton": true,
                    "debug": false,
                    "newestOnTop": false,
                    "progressBar": false,
                    "positionClass": "toast-top-right",
                    "preventDuplicates": false,
                    "onclick": null,
                    "showDuration": "300",
                    "hideDuration": "1000",
                    "timeOut": "5000",
                    "extendedTimeOut": "1000",
                    "showEasing": "swing",
                    "hideEasing": "linear",
                    "showMethod": "fadeIn",
                    "hideMethod": "fadeOut"
                }
            }
        </script>

    }
}
@{
    Session.Remove("Result");

}
<div class="container-fluid ">
    <!-- Start Page Content -->
    <div class="row ">
        <div class="col-lg-12">
            <div class="card card-outline-primary">
                <div class="card" style="background-color:rgb(253, 142, 10)">
                    <h4 class="m-b-0 text-white" style="word-spacing:30px;">หมวดครุภัณฑ์ </h4>
                </div>
                <div class="card-body">
                    <p>
                        @Html.ActionLink("เพิ่มข้อมูล", "Create", null, new { @class = "btn-rounded btn btn-success" })
                    </p>
                    <table id="myTable" class="table table-striped table-bordered " style="width:100%">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.CategoryID)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CA_NameCategory)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="font">
                                        @Html.DisplayFor(modelItem => item.CategoryID)
                                    </td>
                                    <td class="font">
                                        @Html.DisplayFor(modelItem => item.CA_NameCategory)
                                    </td>
                                    <td class="font " width="35%" style="text-align:center">
                                        @Html.ActionLink("แก้ไข", "Edit", null, new { id = item.CategoryID }, new { @class = "btn-rounded btn btn-warning" })
                                        <button class="btn-rounded btn btn-danger " onclick="Delete('@Url.Action("Delete", "T_Category", new { CategoryID= item.CategoryID})')" >ลบข้อมูล</button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    @*<script src="~/Scripts/bootstrap.min.js"></script>*@
    <script src="~/Scripts/jquery.dataTables.min.js"></script>
    @*<script src="~/Scripts/dataTables.bootstrap.min.js"></script>*@
    <script src="~/Scripts/bootstrap-editable.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
    <script>
        function Delete(url) {
            $.confirm({
                title: 'ยืนยัน!',
                content: 'กรุณายืนยัน การลบ',
                type: 'red',
                buttons: {
                    tryAgain: {
                        text: 'ลบ',
                        btnClass: 'btn-danger',
                        action: function () {
                            window.location.href = url;
                        }
                    },
                    ปิด: function () {

                    }
                }
            });
        }
    </script>

}
