<style>
    .bu {
        background-color: #9ACD32; /* Green */
        color: white;
    }
</style>
<div class="col-md-12">
    <div class="card">
        <div class="card-body p-b-0">
            @*<h4 class="card-title">Customtab2 Tab</h4>*@
            <!-- Nav tabs -->
            <ul class="nav nav-tabs customtab2" role="tablist">

                <li class="nav-item"> <a class="nav-link   " data-toggle="tab" href="#profile7" role="tab"><span class="hidden-sm-up "><i class="ti-user"></i></span> <span class="hidden-xs-down ">รอการอนุมัติ   &nbsp; <span class="label label-rouded label-danger pull-right"> @TempData["a"]</span></</span> </a> </li>
                <li class="nav-item"> <a class="nav-link active  " data-toggle="tab" href="#home7" role="tab"><span class="hidden-sm-up"><i class="ti-home"></i></span> <span class="hidden-xs-down">ใบจำหน่าย </span></a> </li>
            </ul>
            <!-- Tab panes -->
            <div class="tab-content">
                <div class="tab-pane active " id="home7" role="tabpanel">
                    <div class="p-20">
                        <table id="myTable" class="table table-striped table-bordered " style="width:100%">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.DistributorID)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Di_Date)
                                    </th>
                                    <th class="font text-left">
                                        @Html.DisplayNameFor(model => model.Di_Status)
                                    </th>
                                    <th>จำนวน</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Where(a => a.Di_Status == "2"))
                                {
                                    <tr>
                                        <td class="font">
                                            @Html.DisplayFor(modelItem => item.DistributorID)
                                        </td>
                                        <td class="font">
                                            @Html.DisplayFor(modelItem => item.Di_Date)
                                        </td>
                                        <td class="font text-center">
                                            @{ var Rl = "";
                                                if (item.Di_Status == "1")
                                                {
                                                    Rl = "ใช้งาน";
                                                }
                                                else if (item.Di_Status == "2")
                                                {
                                                    Rl = "จำหน่าย";
                                                }
                                                else
                                                {
                                                    Rl = "รอดำเนินการ";
                                                }
                                            }
                                            <span class="badge badge-danger">   @Html.DisplayName(Rl) </span>
                                        </td>
                                        <td class="text-center">
                                            @item.T_DistributorList.Count
                                        </td>
                                        <td class="font center-block" style="text-align:center">
                                            @Html.ActionLink("รายการจำหน่าย", "DetailsR", null, new { DistributorID = item.DistributorID }, new { @class = "btn-rounded btn btn-info font" })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="tab-pane  p-20" id="profile7" role="tabpanel">
                    <table id="myTable1" class="table table-striped table-bordered " style="width:100%">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.DistributorID)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Di_Date)
                                </th>
                                <th class="font text-left">
                                    @Html.DisplayNameFor(model => model.Di_Status)
                                </th>
                                <th>จำนวน</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Where(a => a.Di_Status == "3"))
                            {
                                <tr>
                                    <td class="font">
                                        @Html.DisplayFor(modelItem => item.DistributorID)
                                    </td>
                                    <td class="font">
                                        @Html.DisplayFor(modelItem => item.Di_Date)
                                    </td>
                                    <td class="font text-center">
                                        @{ var Rl = "";
                                            if (item.Di_Status == "1")
                                            {
                                                Rl = "ใช้งาน";
                                            }
                                            else if (item.Di_Status == "2")
                                            {
                                                Rl = "จำหน่าย";
                                            }
                                            else
                                            {
                                                Rl = "รอดำเนินการ";
                                            }
                                        }
                                        <span class="badge badge-warning" style="color:white">   @Html.DisplayName(Rl) </span>
                                    </td>
                                    <td class="text-center">
                                        @item.T_DistributorList.Count
                                    </td>
                                    <td style="text-align:center">
                                        @Html.ActionLink("รายการจำหน่าย", "Details", null, new { DistributorID = item.DistributorID }, new { @class = "btn-rounded btn btn-info font" })
                                        <button class="btn-rounded btn btn-danger font " onclick="Delete('@Url.Action("Delete", "Distributor", new { DistributorID= item.DistributorID})')" @*id="IDR" value="@item.RequisitionID"*@>ลบข้อมูล</button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

