@model Khruphanth.Models.T_Type

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Edit", "Type", FormMethod.Post, new { @class = "needs-validation ", @ovalidate = "", @id = "myform2", @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="container-fluid ">
        <!-- Start Page Content -->
        <div class="row ">
            <div class="col-lg-12">
                <div class="card card-outline-primary">
                    <div class="card" style="background-color:rgb(255, 60, 96); text-align:center">
                        <h4 class="m-b-0 text-white" style="word-spacing:30px;">แก้ไขชนิดครุภัณฑ์ </h4>
                    </div>
                    <div class="card-body">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.TypeID)
                        <div class="row p-t-20">

                            <div class="col-md-2">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.TY_NameType, htmlAttributes: new { @class = "control-label col-md-7" })
                                    @Html.EditorFor(model => model.TY_NameType, new { htmlAttributes = new { @class = "form-control input-rounded font", @required = "" } })
                                    @Html.ValidationMessageFor(model => model.TY_NameType, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.TY_CategoryID, null, htmlAttributes: new { @class = "control-label col-md-7" })
                                    @Html.DropDownList("TY_CategoryID", null, htmlAttributes: new { @class = "form-control  input-rounded form-D2 text-center", @required = "" })
                                    @Html.ValidationMessageFor(model => model.TY_CategoryID, "", new { @class = "text-danger" })
                                </div>
                            </div>

                        </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Save" class="btn btn-success btn-rounded m-b-10 m-l-5" />
                                    @Html.ActionLink("Back to List", "Index",null,new {@class= "btn btn-primary btn-rounded m-b-10 m-l-5" })
                                </div>
                            </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
