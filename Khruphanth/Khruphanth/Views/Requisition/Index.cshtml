@model IEnumerable<Khruphanth.Models.T_Requisition>


<div class="container-fluid ">
    <!-- Start Page Content -->
    <div class="row ">
        <div class="col-lg-12">
            <div class="card card-outline-primary">
                <div class="card" style="background-color:rgb(253, 142, 10)">
                    <h4 class="m-b-0 text-white" style="word-spacing:30px;">รายการใบเบิกครุภัณฑ์ </h4>
                </div>
                <div class="card-body">
                    <div class="form-body">
                        @*<p>
                                @Html.ActionLink("Create New", "Create")
                            </p>*@
                        <table class="table table-striped table-bordered" id="myTable" style="width:100%">
                            <thead>
                                <tr>
                                    <th class="font">
                                        @Html.DisplayNameFor(model => model.RequisitionID)
                                    </th>
                                    <th class="font">
                                        @Html.DisplayNameFor(model => model.Re_TeaId)
                                    </th>
                                    <th class="font">
                                        @Html.DisplayNameFor(model => model.Re_DateRequi)
                                    </th>
                                    <th ></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="font">
                                            @Html.DisplayFor(modelItem => item.RequisitionID)
                                        </td>
                                        <td class="font">
                                            @Html.DisplayFor(modelItem => item.Teacher.TeaName)
                                        </td>
                                        <td class="font">
                                            @Html.DisplayFor(modelItem => item.Re_DateRequi)
                                        </td>
                                        <td width="10%" class="font">
                                            @Html.ActionLink("รายละเอียด", "Details",null, new { RequisitionID = item.RequisitionID },new {@class= "btn-rounded btn btn-info" })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@*<link href="~/Content/bootstrap.min.css" rel="stylesheet" />*@

@*<link href="~/Content/dataTables.bootstrap.min.css" rel="stylesheet" />*@
@*<link href="~/Content/font-awesome.min.css" rel="stylesheet" />*@
@*<link href="~/Content/bootstrap-editable.css" rel="stylesheet" />*@
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @*<script src="~/Scripts/bootstrap.min.js"></script>*@
    <script src="~/Scripts/jquery.dataTables.min.js"></script>
    @*<script src="~/Scripts/dataTables.bootstrap.min.js"></script>*@
    <script src="~/Scripts/bootstrap-editable.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>

}
