@model Khruphanth.Models.T_Requisition

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .foColor {
        background-color: #9ACD32; /* Green */
        color: white;
    }
</style>
<div class="container-fluid ">
    <!-- Start Page Content -->
    <div class="row ">
        <div class="col-lg-12">
            <div class="card card-outline-primary">
                <div class="card" style="background-color:rgb(255, 60, 96); text-align:center">
                    <h4 class="m-b-0 text-white" style="word-spacing:30px;">แก้ใขข้อมูลใบเบิกครุภัณฑ์ </h4>
                </div>
                <div class="card-body">
                    <div class="form-body">

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-horizontal">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.HiddenFor(model => model.RequisitionID)
                                <div class="row p-t-20">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Re_TeaId, null, htmlAttributes: new { @class = "control-label col-md-12" })
                                        <div class="col-md-12">
                                            @Html.DropDownList("Re_TeaId", null, htmlAttributes: new { @class = "form-control  input-rounded font form-DD", @required = "" })
                                            @*@Html.EditorFor(model => model.Teacher.TeaName, new { htmlAttributes = new { @class = "form-control" } })*@
                                            @Html.ValidationMessageFor(model => model.Re_TeaId, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Re_DateRequi, htmlAttributes: new { @class = "control-label col-md-5" })
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.Re_DateRequi, new { htmlAttributes = new { @class = "form-control  input-rounded font", @required = "" } })
                                            @Html.ValidationMessageFor(model => model.Re_DateRequi, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Re_StepID, null, htmlAttributes: new { @class = "control-label col-md-12" })
                                        <div class="col-md-12  text-danger">
                                            @*@Html.DropDownList("Re_StepID", null, htmlAttributes: new { @class = "form-control" })*@
                                            @*@Html.EditorFor(model => model.T_Stap.ST_StepName, new { htmlAttributes = new { @class = "form-control" } })*@
                                            <br />
                                            @Html.DisplayFor(Model => Model.T_Stap.ST_StepName,new {@class= "font  text-danger" })
                                            @*@Html.ValidationMessageFor(model => model.Re_StepID, "", new { @class = "text-danger" })*@
                                        </div>
                                    </div>

                                </div>
                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <button type="submit" class="btn-outline btn btn-success font"> <i class="fa fa-check"></i> Save</button>
                                    </div>
                                </div>
                            </div>
                        }

                        <div>
                            @Html.ActionLink("Back to List", "Index")
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
