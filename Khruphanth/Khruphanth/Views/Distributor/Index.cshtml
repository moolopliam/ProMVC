}
<div class="container-fluid ">
    <!-- Start Page Content -->
    <div class="row ">
        <div class="col-lg-12">
            <div class="card card-outline-primary">
                <div class="card" style="background-color:rgb(253, 142, 10)">
                    <h4 class="m-b-0 text-white" style="word-spacing:30px;">ใบจำหน่าย </h4>
                </div>
                <div class="card-body">
                    <p>
                        @Html.ActionLink("เพิ่มข้อมูล", "Create", null, new { @class = "btn-rounded btn btn-success" })
                    </p>
                    <table id="myTable" class="table table-striped table-bordered " style="width:100%">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.DistributorID)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Di_Date)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td  class="font">
                                        @Html.DisplayFor(modelItem => item.DistributorID)
                                    </td>
                                    <td  class="font">
                                        @Html.DisplayFor(modelItem => item.Di_Date)
                                    </td>
                                    <td  class="font center-block" width="35%" style="text-align:center">
                                        @Html.ActionLink("แก้ไขข้อมูล", "Edit", null,new { DistributorID = item.DistributorID },new { @class= "btn btn-warning btn-rounded m-b-10 m-l-5" }) 
                                        @Html.ActionLink("รายการ", "Details", null, new { DistributorID = item.DistributorID },new { @class = "btn btn-info btn-rounded m-b-10 m-l-5" }) 
                                        @Html.ActionLink("ลบข้อมูล", "Delete", null, new { DistributorID = item.DistributorID },new { @class = "btn btn-danger btn-rounded m-b-10 m-l-5" })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    @*<script src="~/Scripts/bootstrap.min.js"></script>*@
    <script src="~/Scripts/jquery.dataTables.min.js"></script>
    @*<script src="~/Scripts/dataTables.bootstrap.min.js"></script>*@
    <script src="~/Scripts/bootstrap-editable.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
    <script>

        function Delete(id) {
            $.confirm({
                title: 'ยืนยัน!',
                content: 'กรุณายืนยัน การลบ',
                type: 'red',
                buttons: {
                    tryAgain: {
                        text: 'ลบ',
                        btnClass: 'btn-danger',
                        action: function () {
                            window.location.href = "@Url.Action("Delete", "Distributor")/?id=" + id;
                        }
                    },
                    ปิด: function () {

                    }
                }
            });
        }
    </script>

}