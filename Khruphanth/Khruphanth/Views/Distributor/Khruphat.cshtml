@model IEnumerable<Khruphanth.Models.T_Khruphanth>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid ">
    <!-- Start Page Content -->
    <div class="row ">
        <div class="col-lg-12">
            <div class="card card-outline-primary">
                <div class="card" style="background-color:rgb(253, 142, 10)">
                    <h4 class="m-b-0 text-white" style="word-spacing:30px;">รายการครุภัณฑ์ </h4>
                </div>
                <div class="card-body">
                    <div class="form-body">
                        @*<p>
                            @Html.ActionLink("Create New", "Create")
                        </p>*@
                        <table id="myTable" class="table table-striped table-bordered " style="width:100%">
                            <thead>
                                <tr>
                                    <th >
                                        @Html.DisplayNameFor(model => model.T_RequestList.RL_PictureKhru)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.KhruphanthID)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Kh_PlaceID)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.T_RequestList.RL_RequisitionID)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.T_Status.Status_Name)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="text-center font">
                                            @if (item.Kh_QR_CODE != null)
                                            {
                                                <img src="data:image/png;base64,@Convert.ToBase64String(item.Kh_QR_CODE)" width="30" class="img-rounded">
                                            }
                                        </td>
                                        <td class="font">
                                            @Html.DisplayFor(modelItem => item.KhruphanthID)
                                        </td>
                                        <td class="font">
                                            @Html.DisplayFor(modelItem => item.T_RequestList.T_Place.PL_NamePlace)
                                        </td>
                                        <td class="font">
                                            @Html.DisplayFor(modelItem => item.T_RequestList.RL_RequisitionID)
                                        </td>
                                        <td class="font">
                                            @if (item.Kh_StatusID == 1)
                                            {
                                                <span class="badge badge-success" style="color:white">   @Html.DisplayFor(modelItem => item.T_Status.Status_Name)</span>
                                            }

                                            @if (item.Kh_StatusID == 2)
                                            {
                                                <span class="badge badge-danger" style="color:white">   @Html.DisplayFor(modelItem => item.T_Status.Status_Name)</span>
                                            }

                                            @if (item.Kh_StatusID == 3)
                                            {
                                                <span class="badge badge-warning" style="color:white">   @Html.DisplayFor(modelItem => item.T_Status.Status_Name)</span>
                                            }
                                        </td>
                                        <td style="text-align: center" class="font">
                                            @Html.ActionLink("รายละเอียด", "DetailKhruphat", null, new { KpID = item.KhruphanthID }, new { @class = "btn-rounded btn btn-info" })       
                                            @Html.ActionLink("จำหน่าย", "leave", null, new {Khruphat = item.KhruphanthID}, new {@class = "btn-rounded btn btn-danger"})
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @*<script src="~/Scripts/bootstrap.min.js"></script>*@
    <script src="~/Scripts/jquery.dataTables.min.js"></script>
    @*<script src="~/Scripts/dataTables.bootstrap.min.js"></script>*@
    <script src="~/Scripts/bootstrap-editable.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
}
