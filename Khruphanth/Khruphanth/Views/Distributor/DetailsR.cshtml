@model IEnumerable<Khruphanth.Models.T_DistributorList>

@{
    ViewBag.Title = "DetailsR";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .m {
        color: white;
    }
</style>
<div class="container-fluid ">
    <!-- Start Page Content -->
    <div class="row ">
        <div class="col-lg-12">
            <div class="card card-outline-primary">
                <div class="card" style="background-color:rgb(253, 142, 10)">
                    <h4 class="m-b-0 text-white" style="word-spacing:30px;">รายการจำหน่าย </h4>
                </div>
                @{
                    var ID = "";
                }
                <div class="card-body">
                    <p>
                        @Html.ActionLink("เพิ่มครุภัณฑ์", "Khruphat", null, new { @class = "btn-rounded btn btn-success" })
                    </p>
                    <table id="myTable4" class="table table-striped table-bordered " style="width:100%">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.DL_KhruphanthID)
                                </th>
                                <th>
                                    @Html.DisplayName("ชื่อครุภัณฑ์")
                                </th>
                                <th>
                                    @Html.DisplayName("สถานที่เก็บ")
                                </th>
                                <th>
                                    @Html.DisplayName("สถานะการจำหน่าย")
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    @{ ID = item.DL_DistributorID;}
                                    <td class="font">
                                        @Html.DisplayFor(modelItem => item.DL_KhruphanthID)
                                    </td>
                                    <td class="font">
                                        @Html.DisplayFor(modelItem => item.T_Khruphanth.T_RequestList.RL_NameKP)
                                    </td>
                                    <td class="font">
                                        @Html.DisplayFor(modelItem => item.T_Khruphanth.T_RequestList.T_Place.PL_NamePlace)
                                    </td>
                                    <td class="font " style="text-align:center">
                                        <span class="badge badge-warning m">@Html.DisplayFor(modelItem => item.T_Khruphanth.T_Status.Status_Name)</span>
                                    </td>
                                    <td class="font center-block" width="35%" style="text-align: center">                              
                                        @Html.ActionLink("รายละเอียด", "DetailKhruphat", null, new {KpID = item.DL_KhruphanthID}, new {@class = "btn btn-info btn-rounded m-b-10 m-l-5"})
                                    </td>
                                </tr>

                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    @*<script src="~/Scripts/bootstrap.min.js"></script>*@
    <script src="~/Scripts/jquery.dataTables.min.js"></script>
    @*<script src="~/Scripts/dataTables.bootstrap.min.js"></script>*@
    <script src="~/Scripts/bootstrap-editable.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#myTable4').DataTable();
        });
    </script>


}